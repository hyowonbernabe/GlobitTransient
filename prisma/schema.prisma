generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// --- Enums ---

enum Role {
  CLIENT
  ADMIN
  AGENT
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

enum PaymentStatus {
  UNPAID
  PARTIAL
  FULL
}

enum CommissionStatus {
  PENDING
  PAID_OUT
  REJECTED
}

enum NotificationType {
  INFO
  SUCCESS
  WARNING
  ERROR
  BOOKING_NEW
  BOOKING_CONFIRMED
  BOOKING_CANCELLED
  CLAIM_SUBMITTED
  CLAIM_APPROVED
  CLAIM_REJECTED
  CHECKIN_SUMMARY
  CHECKOUT_SUMMARY
  SYSTEM_ALERT
}

enum ClaimStatus {
  PENDING
  APPROVED
  REJECTED
}

// --- Core Models ---

model User {
  id             String    @id @default(cuid())
  name           String?
  email          String?   @unique
  emailVerified  DateTime?
  image          String?
  password       String?
  role           Role      @default(CLIENT)
  mobile         String?
  
  commissionRate Float     @default(0.05)
  agentCode      String?   @unique

  bookings       Booking[] @relation("ClientBookings")
  agentBookings  Booking[] @relation("AgentReferrals")
  commissions    Commission[]
  claimRequests  ClaimRequest[] @relation("AgentClaims")
  notifications  Notification[]
  auditLogs      AuditLog[]
  reviews        Review[]
  
  accounts       Account[]
  sessions       Session[]
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Unit {
  id             String    @id @default(cuid())
  name           String
  slug           String    @unique
  description    String
  images         String[]
  
  maxPax         Int
  
  basePrice      Int      
  basePax        Int      
  extraPaxPrice  Int      
  
  bookings       Booking[]
  reviews        Review[]
}

model Booking {
  id                String    @id @default(cuid())
  
  unitId            String
  unit              Unit      @relation(fields: [unitId], references: [id])
  userId            String
  user              User      @relation("ClientBookings", fields: [userId], references: [id])
  agentId           String?
  agent             User?     @relation("AgentReferrals", fields: [agentId], references: [id])

  checkIn           DateTime
  checkOut          DateTime
  
  pax               Int
  hasPWD            Boolean   @default(false)
  
  hasCar            Boolean   @default(false)
  hasPet            Boolean   @default(false)
  
  totalPrice        Int      
  downpayment       Int
  balance           Int
  
  status            BookingStatus @default(PENDING)
  paymentStatus     PaymentStatus @default(UNPAID)
  
  checkoutSessionId String?   @unique // NEW: Track PayMongo Session
  notes             String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  commissions       Commission[]
  claimRequests     ClaimRequest[]

  @@index([checkIn, checkOut])
  @@index([userId])
}

model Commission {
  id            String    @id @default(cuid())
  amount        Int
  status        CommissionStatus @default(PENDING)
  paidAt        DateTime?
  
  bookingId     String
  booking       Booking   @relation(fields: [bookingId], references: [id])
  agentId       String
  agent         User      @relation(fields: [agentId], references: [id])
  
  createdAt     DateTime @default(now())
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  message   String
  type      NotificationType @default(INFO)
  isRead    Boolean          @default(false)
  link      String?
  metadata  Json?
  adminOnly Boolean          @default(false)
  createdAt DateTime         @default(now())

  @@index([userId, isRead])
  @@index([createdAt])
}

model AuditLog {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  action     String   
  entityType String   
  entityId   String?  
  details    String?  
  createdAt  DateTime @default(now())

  @@index([userId])
  @@index([action])
}

model ClaimRequest {
  id          String      @id @default(cuid())
  bookingId   String
  booking     Booking     @relation(fields: [bookingId], references: [id])
  agentId     String
  agent       User        @relation("AgentClaims", fields: [agentId], references: [id])
  description String?
  proofImage  String?
  status      ClaimStatus @default(PENDING)
  reviewedBy  String?
  reviewedAt  DateTime?
  createdAt   DateTime    @default(now())

  @@index([agentId])
  @@index([status])
}

model Review {
  id        String   @id @default(cuid())
  rating    Int      
  comment   String?  @db.Text
  images    String[] @default([])
  isVisible Boolean  @default(true)
  
  unitId    String
  unit      Unit     @relation(fields: [unitId], references: [id])
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([unitId])
  @@index([isVisible])
}

model KnowledgeSnippet {
  id        String    @id @default(cuid())
  content   String    
  category  String    

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}